{
    "name": "clayliddell/laravel-shopping-cart",
    "description": "Shopping Cart implementation for Laravel 5 - 8.",
    "license": "MIT",
    "type": "laravel",
    "minimum-stability": "dev",
    "keywords": [
        "laravel",
        "eloquent",
        "model",
        "shopping cart"
    ],
    "authors": [
        {
            "name": "Clayton Liddell",
            "email": "dev@clayliddell.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "illuminate/contracts": "5.0.*|5.1.*|5.2.*|5.3.*|5.4.*|5.5.*|5.6.*|5.7.*|5.8.*|^6.0|^7.0|^8.0",
        "illuminate/database": "5.0.*|5.1.*|5.2.*|5.3.*|5.4.*|5.5.*|5.6.*|5.7.*|5.8.*|^6.0|^7.0|^8.0",
        "illuminate/events": "5.0.*|5.1.*|5.2.*|5.3.*|5.4.*|5.5.*|5.6.*|5.7.*|5.8.*|^6.0|^7.0|^8.0",
        "illuminate/support": "5.0.*|5.1.*|5.2.*|5.3.*|5.4.*|5.5.*|5.6.*|5.7.*|5.8.*|^6.0|^7.0|^8.0",
        "illuminate/validation": "5.0.*|5.1.*|5.2.*|5.3.*|5.4.*|5.5.*|5.6.*|5.7.*|5.8.*|^6.0|^7.0|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "clayliddell\\ShoppingCart\\": "src"
        }
    },
    "autoload-dev": {},
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "clayliddell\\ShoppingCart\\ShoppingCartServiceProvider"
            ],
            "aliases": {
                "ShoppingCart": "clayliddell\\ShoppingCart\\Facades\\CartFacade"
            }
        }
    }
}
